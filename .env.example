# LLM Provider (openai or bedrock)
LLM_PROVIDER=openai

# OpenAI Configuration (Primary)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_ID=gpt-5
OPENAI_SAGE_MODEL_ID=gpt-5
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# AWS Configuration (Alternative/Backup)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Bedrock Configuration (Alternative/Backup)
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307
BEDROCK_SAGE_MODEL_ID=anthropic.claude-3-sonnet-20240229

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=simulation123
NEO4J_DATABASE=simulation
NEO4J_AUTH=neo4j/simulation123
NEO4J_dbms_default__database=simulation
NEO4J_dbms_memory_pagecache_size=2G
NEO4J_dbms_memory_heap_max__size=2G

# Simulation Configuration
SIMULATION_NAME=smallville_v1
MAX_AGENTS=5
MAX_DAYS=10
TICKS_PER_DAY=24
TICK_DURATION_MS=5000

# Rate Limiting
DAILY_TOKEN_BUDGET=1000000
PER_AGENT_TOKEN_LIMIT=200000
MAX_CONVERSATION_TURNS=5

# Sage Configuration
SAGE_SEARCH_LIMIT_PER_DAY=1
SAGE_AGENT_NAME=sage_librarian

# Observability
ENABLE_CLOUDWATCH=true
ENABLE_OPENTELEMETRY=true
LOG_LEVEL=INFO

# Development
DEBUG_MODE=false
SAVE_CONVERSATION_LOGS=true
CONVERSATION_LOG_PATH=./logs/conversations/

# Docker Compose Configuration
# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=neo4j-datasource,redis-datasource

# Jupyter
JUPYTER_TOKEN=simulation123

# Redis
REDIS_MAXMEMORY=256mb

# Network
COMPOSE_PROJECT_NAME=sim
DOCKER_NETWORK_SUBNET=172.28.0.0/16